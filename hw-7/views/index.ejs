<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista Studenti</title>
</head>
<body>
    <h2>Lista studenti</h2>

    <table border="1" width="100%">
        <thead>
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Prosek</th>
                <th>Opcii</th>
            </tr>
        </thead>
        <tbody id="tBody">
            <% studenti.forEach((s, index) => { %> <tr>
                    <td><%= s.ime %></td>
                    <td><%= s.prezime %></td>
                    <td><%= s.prosek %></td>
                    <td> <form action="/delete/<%= index %>" method="POST">
                            <button type="submit">Izbrishi</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <hr>

    <form action="/" method="post">
        <label for="ime">Ime:</label>
        <input type="text" name="ime" id="ime" required>
        <label for="prezime">Prezime:</label>
        <input type="text" name="prezime" id="prezime" required>
        <label for="prosek">Prosek:</label>
        <input type="number" name="prosek" id="prosek" required>
        <input type="submit" value="dodadi student">
    </form>
</body>
</html>